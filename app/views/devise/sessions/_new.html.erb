

<div class="modal fade" id="logInModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Sign in</h4>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="modal-body mx-3">
        <div class="md-form mb-5">
          <i class="fa fa-envelope prefix grey-text"></i>
          <%= f.email_field :email %>
          <label data-error="wrong" data-success="right" for="defaultForm-email">Your email</label><br>
        </div>

        <div class="md-form mb-4">
          <i class="fa fa-lock prefix grey-text"></i>
           <%= f.password_field :password, autocomplete: "off" %>
          <label data-error="wrong" data-success="right" for="defaultForm-pass">Your password</label><br>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          </div>
        <% end -%>

      </div>
      <div class="modal-footer d-flex justify-content-center">
         <%= f.submit "Login", class: 'btn btn-outline-success', onclick: "window.location.href='/';" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
